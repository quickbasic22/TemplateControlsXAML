<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TemplateControlsXAML.MainPage"
             ControlTemplate="{StaticResource MyBlue}"
             Title="Control Templates">

    <StackLayout>
        <Label Text="A Label inserted into Content Presenter" FontSize="Large" BackgroundColor="LightSeaGreen" TextColor="Black" />
        <Label Text="{Binding Value}" BindingContext="{x:Reference MyStepper}" FontSize="Title" BackgroundColor="MediumPurple" />
        <Stepper x:Name="MyStepper" Minimum="0" Maximum="100" Value="49" Increment="10" BackgroundColor="LightGreen" />
    </StackLayout>
</ContentPage>
